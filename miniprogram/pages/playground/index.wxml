      <text class="loading-text">åŠ è½½ä¸­...</text>
    </view>
    <view class="no-more-text" wx:if="{{ !hasMore && posts.length > 0 }}">â€” æ²¡æœ‰æ›´å¤šå†…å®¹äº† â€”</view>
    <view class="empty-tip" wx:if="{{ !loading && posts.length === 0 }}">æš‚æ— å†…å®¹</view>
  </view>
  <!-- å‘è´´æŒ‰é’® -->
  <view class="publish-button" bind:tap="publishPost">
