.custom-search {
  display: flex;
  align-items: center;
  padding: 16rpx 30rpx;
  box-sizing: border-box;
  width: 100%;
}

.search-content {
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  background-color: #f7f8fa;
  border-radius: 4rpx;
  height: 72rpx;
  flex: 1;
}

.search-content.round {
  border-radius: 36rpx;
}

.search-icon,
.clear-icon {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 48rpx;
  height: 48rpx;
}

.svg-icon {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 36rpx;
  height: 36rpx;
}

/* 字体图标样式 */
@font-face {
  font-family: "iconfont";
  src: url("data:font/woff2;charset=utf-8;base64,")
    format("woff2");
  font-weight: normal;
  font-style: normal;
}

.iconfont {
  font-family: "iconfont" !important;
  font-size: 32rpx;
  font-style: normal;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  color: #999;
}

.icon-search:before {
  content: "\e622";
}

.icon-clear:before {
  content: "\e63e";
}

.search-input {
  flex: 1;
  height: 72rpx;
  padding: 0 16rpx;
  font-size: 28rpx;
  color: #333;
}

.search-action {
  padding-left: 20rpx;
  font-size: 28rpx;
  color: #07c160;
}

.action-text {
  padding: 0 4rpx;
}
